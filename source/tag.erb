<!--================ Start Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>Blog</h2>
                <div class="page_link">
                    <%= link_to "Home", "/" %>
                    <%= link_to "Blog", "/blog.html" %>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================ End Banner Area =================-->

<!--================Blog Categorie Area =================-->
<section class="blog_categorie_area section_gap_top">
</section>
<!--================Blog Categorie Area =================-->

<!--================Blog Area =================-->
<section class="blog_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog_left_sidebar">
                    <p>
                      <h3>Tag: <%= current_page.locals["tagname"] %></h3>
                    </p>
                    <% current_page.locals["articles"].each do |article| %>
                      <article class="row blog_item">
                          <div class="col-md-3">
                              <div class="blog_info text-right">
                                  <div class="post_tag">
                                      <% article.tags.each do |tag| %>
                                        <a href="<%= blog_controller.tag_pages.link(tag) %>"><%= tag %></a>,
                                      <% end %>
                                  </div>
                                  <ul class="blog_meta list">
                                      <li><a><%= article.date.strftime("%d %b, %Y") %><i class="fa fa-calendar"></i></a></li>
                                  </ul>
                              </div>
                          </div>
                          <div class="col-md-9">
                              <div class="blog_post">
                                  <%= image_tag(article.data.image) %>
                                  <div class="blog_details">
                                      <% link_to article.url do %>
                                        <h2><%= article.title %></h2>
                                      <% end %>

                                      <p><%= article.data.summary %></p>
                                      <% link_to article.url, class: "primary_btn" do %>
                                        <span>View More</span>
                                      <% end %>
                                  </div>
                              </div>
                          </div>
                      </article>
                    <% end %>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single-sidebar-widget tag_cloud_widget">
                        <h4 class="widget_title">Tag Clouds</h4>
                        <ul class="list">
                            <% blog.tags.each do |tag, articles| %>
                                <li><a href="<%= blog_controller.tag_pages.link(tag) %>"><%= tag %></a></li>
                            <% end %>
                        </ul>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->
